# Theme and fort
theme = Dracula
font-family = JetBrains Mono
font-size = 18
background-opacity = 0.90

# Copy to clipboard on select
copy-on-select = clipboard

# Wide Scroll
scrollback-limit = 100000

# Super + [ `+`, `-` or `-`] to modify font size 
keybind = super+kp_add=increase_font_size:1
keybind = super+kp_subtract=increase_font_size:1
keybind = super+kp_0=reset_font_size
