#### INSTANT PROMPT (Powerlevel10k)
# Speeds up shell startup by preloading the prompt.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

#### LOCALE & EDITOR
export LANG=es_ES.UTF-8
export EDITOR=nvim

#### OH-MY-ZSH & THEME
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="powerlevel10k/powerlevel10k"

#### PLUGINS
plugins=(
  git
  brew
  bundler
  zsh-syntax-highlighting
  zsh-autosuggestions
)

# Load Oh My Zsh
source $ZSH/oh-my-zsh.sh

# Load external plugins manually
source $ZSH/custom/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
source $ZSH/custom/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# Load Powerlevel10k configuration if available
[[ -f ~/.p10k.zsh ]] && source ~/.p10k.zsh

# Bind Shift+Tab to accept autosuggestion (instead of ‚Üí)
bindkey "^[[Z" autosuggest-accept

#### ALIASES
#
# Bat as default cat
#[[ -x "$(command -v bat)" ]] && alias cat="bat" || { [[ -x "$(command -v batcat)" ]] && alias cat="batcat" && alias bat="batcat"; }

# Auto-load custom host-specific config
ZSH_CUSTOM_MACHINE="$ZSH/custom/${USER}-$(hostname -s).zsh"
[[ -f "$ZSH_CUSTOM_MACHINE" ]] && source "$ZSH_CUSTOM_MACHINE"

#### STARTUP BANNER
# Displays system and session info on shell startup
ip_local=$(
  if command -v ipconfig >/dev/null 2>&1; then
    # macOS: try en0 first; if it has no IP, fall back to the default route interface.
    ipconfig getifaddr en0 2>/dev/null || {
      default_iface="$(route get default 2>/dev/null | awk '/interface:/{print $2; exit}')"
      ipconfig getifaddr "${default_iface:-en0}" 2>/dev/null
    }
  elif command -v ip >/dev/null 2>&1; then
    # Linux: pick the first global IPv4 address from an UP interface (skip loopback).
    ip -o -4 addr show scope global up 2>/dev/null \
      | awk '{print $4}' \
      | cut -d/ -f1 \
      | head -n1
  else
    # Last-resort fallback (may vary by platform).
    hostname -i 2>/dev/null
  fi
)
ip_public=$(curl -s https://api.ipify.org)

